<div class="background-img" style="background-image: url(<%= @flat.picture_url%>)">
</div>
<div class="container overlap-sm">
  <div class="flat-main-wrap">
    <div class="bg-grey brad-sm flat-main">
      <h1><%= @flat.name %></h1>
      <h4><%= @flat.address %></h4>
    </div>
    <div class="bg-grey brad-sm flat-info">
      <h3>A bit more about this flat...</h3>
      <p><%= @flat.description %></p>
    </div>
  </div>
  <div class="flat-booking-wrap">
    <div class="bg-grey brad-sm flat-booking">
      <h4>Book this place!</h4>
      <form action="">
        <div>
          <label for="">From:</label>
          <input type="text" placeholder="<%= Date.today %>">
        </div>
        <div>
          <label for="">To:</label>
          <input type="text" placeholder="<%= Date.today %>">
        </div>
      </form>
    </div>
    <div class="bg-grey brad-sm flat-details">
      <h3>Details</h3>
      <div class="flex">
        <i class="fas fa-user-friends">   <%= @flat.number_of_guests %></i><i class="fas fa-dollar-sign">   <%= @flat.price_per_night %></i>
      </div>
    </div>
    <div class="bg-grey brad-sm flat-share flex space-between aling-center">
      <p>Share</p>
      <div class="flat-share-media flex">
        <i class="fab fa-facebook-square"></i>
        <i class="fab fa-twitter-square"></i>
        <i class="fab fa-pinterest-square"></i>
        <i class="fa fa-envelope-square"></i>
      </div>
    </div>
  </div>
</div>
